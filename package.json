{
  "name": "loancrate-sync-example",
  "version": "1.0.0",
  "description": "LoanCrate Data Synchronization Example",
  "license": "ISC",
  "type": "module",
  "exports": {
    ".": "./dist/main.js",
    "./src/*": "./dist/*.js"
  },
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "build": "tsc --project tsconfig.build.json",
    "lint": "eslint src",
    "start": "ts-node -r dotenv/config src/index.ts | pino-pretty",
    "watch": "nodemon"
  },
  "dependencies": {
    "@loancrate/json-selector": "^2.1.0",
    "async-cleanup": "^1.0.0",
    "catch-unknown": "^1.0.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "got": "^11.8.5",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0",
    "lru-cache": "^7.13.1",
    "ngrok": "^4.3.1",
    "open": "^8.4.0",
    "pino": "^8.3.0",
    "pino-pretty": "^8.1.0"
  },
  "optionalDependencies": {
    "node-portmapping": "^0.2.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.13",
    "@types/lru-cache": "^7.10.10",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --list-different",
    "*.ts": "eslint"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node -r dotenv/config src/index.ts | pino-pretty"
  }
}
